<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Adicionar Usuário</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container mt-5">
        <h1>Adicionar Usuário</h1>
        <form action="/usuarios" method="post">
            <!-- Nome do Usuário -->
            <div class="mb-3">
                <label for="nome" class="form-label">Nome Completo</label>
                <input type="text" class="form-control" id="nome" name="nome" placeholder="Digite o nome completo" required>
            </div>

            <!-- Email do Usuário -->
            <div class="mb-3">
                <label for="email" class="form-label">Email</label>
                <input type="email" class="form-control" id="email" name="email" placeholder="Digite o email" required>
            </div>

            <!-- Senha do Usuário -->
            <div class="mb-3">
                <label for="senha" class="form-label">Senha</label>
                <input type="password" class="form-control" id="senha" name="senha" placeholder="Digite a senha" required>
            </div>

            <!-- Confirmação de Senha -->
            <div class="mb-3">
                <label for="confSenha" class="form-label">Confirme a Senha</label>
                <input type="password" class="form-control" id="confSenha" name="confSenha" placeholder="Confirme a senha" required>
            </div>

            <!-- Telefone do Usuário -->
            <div class="mb-3">
                <label for="telefone" class="form-label">Telefone</label>
                <input type="text" class="form-control" id="telefone" name="telefone" placeholder="Digite o telefone" required>
            </div>

            <!-- Papel do Usuário -->
            <div class="mb-3">
                <label for="papel" class="form-label">Papel no Sistema</label>
                <select class="form-select" id="papel" name="papel" required>
                    <option value="admin">Administrador</option>
                    <option value="editor">Editor</option>
                    <option value="usuario">Usuário Comum</option>
                </select>
            </div>

            <!-- Checkbox de Ativo -->
            <div class="mb-3 form-check">
                <input type="checkbox" class="form-check-input" id="ativo" name="ativo">
                <label class="form-check-label" for="ativo">Usuário Ativo</label>
            </div>

            <!-- Botões de Ação -->
            <div class="d-flex justify-content-between">
                <button type="submit" class="btn btn-primary">Salvar</button>
                <a href="/usuarios" class="btn btn-secondary">Cancelar</a>
            </div>
        </form>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>